<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <!-- post view -->
      <div class="user">
            <div class="avatar">
            <img src="user_avatar.jpg">
            </div>
            <div class="username">
            <%= post.user.username %>
            </div>
        </div>
        <%= image_tag 'playa3', class: 'main-image' %>
        <div class="description">
            <%= post.description %>
        </div>
    </section>
  <% end %>
</div>