<div class="user-profile">
    <div class="profile row">
        <div class="col-md-4 avatar">            
            <div class="wrapper">
                <img src="">
            </div>
        </div>

        <div class="col-md-8 basic-info">
            <div class="user-wrapper">
                <h2 class="username"><%= current_user.username %></h2>
                <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
                    <button>Edit Profile</button>
                </a>
            </div>

            <ul class="posts">
                <li><span><%= @posts.count %></span> posts </li>
                <li><span>198</span> followers </li>
                <li><span>340</span> following </li>
            </ul>
            <h2 class="name"><%= current_user.name %></h2>
            <%= link_to current_user.website, current_user.website, target: '_blank', class: 'website' %>
        </div>
    </div>
</div>

<div class="user-tabs">
    <a class="tab active">
        <i class="fa fa-th" href=""></i>
        POST
    </a>
    <a class="tab">
        <i class="fa fa-tv" href=""></i>
        IGTV
    </a>
    <a class="tab">
        <i class="fa fa-bookmark" href=""></i>
        SAVED
    </a>
    <a class="tab">
        <i class="fa fa-tag" href=""></i>
        TAGGED
    </a>
</div>

<div class="user-images">
    <div class="user-images">
        <% @posts.each do |post| %>
            <div class="wrapper">
                <div class="wrapper">
                    <%= image_tag 'playa2'%>
                </div>
            </div>
        <% end %>
    </div>
</div>